<p id="notice"><%= notice %></p>

<h1>Liste de films à voir selon PTZ</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Date de sortie</th>
      <th>Synopsis</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.titre %></td>
        <td><%= film.date %></td>
        <td><%= film.description %></td>
        <td><%= film.genre %></td>
        <td><%= link_to 'Voir', film %></td>
        <td><%= link_to 'Modifier', edit_film_path(film) %></td>
        <td><%= link_to 'Supprimer', film, method: :delete, data: { confirm: 'Vous êtes sûrs de vouloir supprimer ce film de la liste?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajoutez un film', new_film_path %>